extends layout

block content
  h1= title
  p Add a new beer
  #logo
    img(src='/images/Oz.jpg')
  #display
      #login        
        form(method='post', enctype="multipart/form-data")
            | Enter information
            div
                | Beer Name: 
                input(type='text', name='beer_name', value=beer_name)
            div
                | Brew Date: 
                input(type='text', name='brew_date')
            div
                | Type: 
                input(type='text', name='type')
            div
                | Description: 
                input(type='text', name='description')
            div
                | Recipe: 
                input(type='text', name='recipe')
            div
                | Original Gravity: 
                input(type='text', name='original_gravity')
            div
                | Comments: 
                input(type='text', name='comment')
            div
                | Picture: 
                input(type='file', name='beer_picture')
            div
                input(type='submit', value='Save')
    
  include footer